{
  "title": "Labracodabrador Blockchain Overview",
  "uid": "blockchain-overview",
    "tags": ["blockchain", "ethereum", "poa"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "graph",
        "title": "Block Height",
        "targets": [
          {
            "expr": "chain_head_block",
            "legendFormat": "{{node_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Block Number"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "pointradius": 2,
        "points": false,
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": false,
          "current": true,
          "max": true,
          "min": false,
          "values": true
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "graph",
        "title": "Peer Count",
        "targets": [
          {
            "expr": "p2p_peers",
            "legendFormat": "{{node_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Peers"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "thresholds": [
          {
            "value": 2,
            "colorMode": "critical",
            "op": "lt",
            "fill": true,
            "line": true
          }
        ]
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 8},
        "type": "graph",
        "title": "Block Rate (blocks/min)",
        "targets": [
          {
            "expr": "rate(chain_head_block[5m]) * 60",
            "legendFormat": "{{node_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Blocks/min"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 8},
        "type": "graph",
        "title": "Transaction Pool",
        "targets": [
          {
            "expr": "txpool_pending",
            "legendFormat": "{{node_name}} pending",
            "refId": "A"
          },
          {
            "expr": "txpool_queued",
            "legendFormat": "{{node_name}} queued",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Transactions"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "stack": false
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 8},
        "type": "graph",
        "title": "Gas Usage",
        "targets": [
          {
            "expr": "chain_head_receipt_gasused",
            "legendFormat": "{{node_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Gas Used"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "type": "graph",
        "title": "Memory Usage",
        "targets": [
          {
            "expr": "system_memory_allocs",
            "legendFormat": "{{node_name}} allocs",
            "refId": "A"
          },
          {
            "expr": "system_memory_frees",
            "legendFormat": "{{node_name}} frees",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Bytes"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "type": "graph",
        "title": "CPU Usage",
        "targets": [
          {
            "expr": "rate(system_cpu_sysload[5m])",
            "legendFormat": "{{node_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU %"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "thresholds": [
          {
            "value": 80,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "line": true
          }
        ]
      },
      {
        "id": 8,
        "gridPos": {"h": 4, "w": 4, "x": 0, "y": 24},
        "type": "stat",
        "title": "Current Block",
        "targets": [
          {
            "expr": "max(chain_head_block)",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "justifyMode": "auto",
          "textMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "gridPos": {"h": 4, "w": 4, "x": 4, "y": 24},
        "type": "stat",
        "title": "Total Peers",
        "targets": [
          {
            "expr": "sum(p2p_peers)",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "green", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "gridPos": {"h": 4, "w": 4, "x": 8, "y": 24},
        "type": "stat",
        "title": "Pending TXs",
        "targets": [
          {
            "expr": "sum(txpool_pending)",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 1000}
              ]
            }
          }
        }
      },
      {
        "id": 11,
        "gridPos": {"h": 4, "w": 4, "x": 12, "y": 24},
        "type": "stat",
        "title": "Signer Nodes Up",
        "targets": [
          {
            "expr": "count(up{node_type=\"signer\"} == 1)",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 2},
                {"color": "green", "value": 3}
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "gridPos": {"h": 4, "w": 4, "x": 16, "y": 24},
        "type": "stat",
        "title": "RPC Nodes Up",
        "targets": [
          {
            "expr": "count(up{node_type=\"rpc\"} == 1)",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "green", "value": 2}
              ]
            }
          }
        }
      },
      {
        "id": 13,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "type": "graph",
        "title": "RPC Calls Rate",
        "targets": [
          {
            "expr": "rate(rpc_requests[5m])",
            "legendFormat": "{{node_name}} - {{method}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2
      },
      {
        "id": 14,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "type": "graph",
        "title": "Database Size",
        "targets": [
          {
            "expr": "eth_db_chaindata_disk_size",
            "legendFormat": "{{node_name}} chaindata",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Size"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "editable": true
}

