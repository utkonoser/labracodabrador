{
  "title": "Node Details",
  "uid": "node-details",
    "tags": ["blockchain", "node", "details"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "templating": {
      "list": [
        {
          "name": "node",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(up, node_name)",
          "refresh": 1,
          "includeAll": false,
          "multi": false,
          "current": {
            "text": "signer1",
            "value": "signer1"
          }
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
        "type": "stat",
        "title": "Node Status",
        "targets": [
          {
            "expr": "up{node_name=\"$node\"}",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "textMode": "value",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN"},
              {"type": "value", "value": "1", "text": "UP"}
            ],
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
        "type": "stat",
        "title": "Current Block",
        "targets": [
          {
            "expr": "chain_head_block{node_name=\"$node\"}",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
        "type": "stat",
        "title": "Connected Peers",
        "targets": [
          {
            "expr": "p2p_peers{node_name=\"$node\"}",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 2},
                {"color": "green", "value": 4}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0},
        "type": "stat",
        "title": "Pending Transactions",
        "targets": [
          {
            "expr": "txpool_pending{node_name=\"$node\"}",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "type": "graph",
        "title": "Sync Progress",
        "targets": [
          {
            "expr": "chain_head_block{node_name=\"$node\"}",
            "legendFormat": "Block Height",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Block"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "type": "graph",
        "title": "P2P Traffic",
        "targets": [
          {
            "expr": "rate(p2p_ingress{node_name=\"$node\"}[5m])",
            "legendFormat": "Ingress",
            "refId": "A"
          },
          {
            "expr": "rate(p2p_egress{node_name=\"$node\"}[5m])",
            "legendFormat": "Egress",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "Bps", "label": "Bytes/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "type": "graph",
        "title": "Memory Usage Detail",
        "targets": [
          {
            "expr": "system_memory_allocs{node_name=\"$node\"}",
            "legendFormat": "Allocated",
            "refId": "A"
          },
          {
            "expr": "system_memory_used{node_name=\"$node\"}",
            "legendFormat": "Used",
            "refId": "B"
          },
          {
            "expr": "system_memory_held{node_name=\"$node\"}",
            "legendFormat": "Held",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Bytes"},
          {"format": "short"}
        ],
        "stack": false
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
        "type": "graph",
        "title": "Goroutines",
        "targets": [
          {
            "expr": "system_goroutines{node_name=\"$node\"}",
            "legendFormat": "Goroutines",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Count"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 22},
        "type": "table",
        "title": "Connected Peers Info",
        "targets": [
          {
            "expr": "p2p_peers{node_name=\"$node\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              }
            }
          }
        ]
      },
      {
        "id": 10,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 30},
        "type": "graph",
        "title": "Transaction Pool Activity",
        "targets": [
          {
            "expr": "rate(txpool_valid{node_name=\"$node\"}[5m])",
            "legendFormat": "Valid TXs/s",
            "refId": "A"
          },
          {
            "expr": "rate(txpool_invalid{node_name=\"$node\"}[5m])",
            "legendFormat": "Invalid TXs/s",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "TXs/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 11,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 30},
        "type": "graph",
        "title": "Chain Reorgs",
        "targets": [
          {
            "expr": "chain_reorg_add{node_name=\"$node\"}",
            "legendFormat": "Added",
            "refId": "A"
          },
          {
            "expr": "chain_reorg_drop{node_name=\"$node\"}",
            "legendFormat": "Dropped",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Blocks"},
          {"format": "short"}
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "editable": true
}

